<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/ivApartmentsListImage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/tvApartmentsListTitle"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Title here"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivApartmentsListImage" />

    <TextView
        android:id="@+id/tvApartmentsListPrice"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Price here"
        android:textColor="#FF000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvApartmentsListTitle"
        app:layout_constraintTop_toBottomOf="@+id/ivApartmentsListImage" />

    <TextView
        android:id="@+id/tvApartmentsListLocation"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Location here"
        android:textColor="#FF000000"
        app:layout_constraintStart_toEndOf="@+id/locationButton"
        app:layout_constraintTop_toBottomOf="@+id/tvApartmentsListTitle" />

    <TextView
        android:id="@+id/tvApartmentsListRooms"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Rooms here"
        android:textColor="#FF000000"
        app:layout_constraintStart_toEndOf="@+id/roomsButton"
        app:layout_constraintTop_toBottomOf="@+id/tvApartmentsListTitle" />

    <TextView
        android:id="@+id/tvApartmentsListPropertyType"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="Property type here"
        android:textColor="#FF000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toEndOf="@+id/propertyButton"
        app:layout_constraintTop_toBottomOf="@+id/tvApartmentsListTitle" />

    <ImageButton
        android:id="@+id/likeButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationButton"
        app:srcCompat="@drawable/like_button_nav" />

    <ImageView
        android:id="@+id/calendarButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationButton"
        app:srcCompat="@drawable/calendar_button" />

    <TextView
        android:id="@+id/tvApartmentsListDates"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="68dp"
        android:text="Dates here"
        android:textColor="#FF000000"
        app:layout_constraintEnd_toStartOf="@+id/likeButton"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintStart_toStartOf="@+id/calendarButton"
        app:layout_constraintTop_toBottomOf="@+id/locationButton" />

    <ImageView
        android:id="@+id/locationButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvApartmentsListTitle"
        app:srcCompat="@drawable/location_button" />

    <ImageView
        android:id="@+id/roomsButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/tvApartmentsListLocation"
        app:layout_constraintTop_toBottomOf="@+id/tvApartmentsListTitle"
        app:srcCompat="@drawable/rooms_button" />

    <ImageView
        android:id="@+id/propertyButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/tvApartmentsListRooms"
        app:layout_constraintTop_toBottomOf="@+id/tvApartmentsListTitle"
        app:srcCompat="@drawable/home_button_nav" />
</androidx.constraintlayout.widget.ConstraintLayout>